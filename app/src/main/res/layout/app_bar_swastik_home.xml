<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Widget.AppCompat.PopupMenu" />


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/rl_opp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@android:color/holo_red_dark" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewpager"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabMaxWidth="20dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="bottom"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1daf00"
                    android:padding="16dp"
                    android:text="From 10 am to 11 pm"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="ABOUT"
                            android:gravity="left"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:background="@color/colorPrimary"
                            android:textStyle="bold"
                            android:typeface="serif"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="7dp"
                            android:padding="10dp"
                            android:text="● Swastik Is A Place Where Innovation Never Stop. One stop Contractor Services Solutions for Interior or Exteriors."
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="#e0e0e0"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="7dp"
                            android:padding="10dp"
                            android:text="● Exclusive Distributer of Supreme Funjoy Schools Puzzles &amp; Decaura Self-adhesive Tiles Looking For Dealers School Stationary &amp; Interior Shop In Western Rajasthan. "
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <include layout="@layout/home_ours_services_laout"/>






                <android.support.v7.widget.CardView
                    android:id="@+id/lastCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:padding="10dp"
                            android:gravity="left"
                            android:text="Contact Information"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address : 276 A,Rameshwar Nagar Main Road,Opp Mohan Bansi complex Basni 1st Phase Jodhpur- 342005, Rajasthan, India"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:lineSpacingExtra="7dp"
                            android:padding="10dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#1daf00"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email : swastiktrading94@gmail.com"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:lineSpacingExtra="7dp"
                            android:padding="10dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#1daf00"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone : 9928091259"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:lineSpacingExtra="7dp"
                            android:padding="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_call"
                                />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_fb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/fb_logo" />

                            <ImageView
                                android:id="@+id/img_wa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_wa_logo" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>



    <RelativeLayout
        android:id="@+id/rl_opp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_opp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_opprtunity_view"
            android:text="Opportunity for you to work with us!"
            android:gravity="center"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:typeface="serif" />
    </RelativeLayout>

</RelativeLayout>

