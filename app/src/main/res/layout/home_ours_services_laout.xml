<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Our Services"
                android:gravity="left"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interior Decor Products"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="● Customized Wallpapers\n● Nilaya(Asian Paints) Wallpapers\n● Canvas Paintings\n● Artificial Grass &amp; Plants\n● Customized WallStickers\n● Wooden Vinyl Flooring\n● Glass Films(Customized &amp;  Decorative)\n● Frp Sculptures &amp; Handicraft Decor\n● Spikes Services \n● Bird Net Services \n●Modular Kitchen
"
                android:maxLines="10"
                android:textSize="@dimen/small_16sp"
                android:lineSpacingExtra="6dp"
                android:textColor="@android:color/black"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"
                android:layout_marginTop="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Architect Construction Products"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>







                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="● Elevations (HPL, ACP)\n● Stone Murals Mosaic (2D,3D)\n● Pergola &amp; Gazebo(Wooden, WPC)\n● 304SS Gates Railings\n● Toughened Glass Fabrications\n● Cunstruction Chemicals &amp; Tiles Adhesive\n●Ferro Cement Applications"
                    android:maxLines="6"
                    android:textSize="@dimen/small_16sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="5dp"/>






        </LinearLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>