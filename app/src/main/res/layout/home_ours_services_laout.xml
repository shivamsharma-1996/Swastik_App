<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0e0e0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Our Services"
                android:gravity="left"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Architect Construction Products"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"/>







                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="● Elevations
● Stone Murals &amp; Mosaic
● Pergolas &amp; Gazebo
● 304SS Gates
●Toughened Glass Fabrications"

                    android:textSize="@dimen/small_16sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="false"
                    android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#808080"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customized Interior Decor"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="● Customized Wallpapers
● Canvas Wall Paintings
● Pergolas &amp; Gazebo
● Artificial Plants &amp; Grass
● Customized Decals
● Wooden Flooring
● Glass Films
● Frp &amp; Handicraft Sculptures
● Spikes , Bird Net
"
                android:textSize="@dimen/small_16sp"
                android:lineSpacingExtra="6dp"
                android:textColor="@android:color/black"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>





</LinearLayout>