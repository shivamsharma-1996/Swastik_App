<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_ref_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reffrence ID : 13e334323544"
            android:gravity="center"
            android:textSize="@dimen/large_20sp"
            android:textColor="#000"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#fff"
            android:background="@drawable/service_semi_round_red"
            android:textSize="@dimen/small_16sp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:visibility="invisible" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opportunity to Work with us!"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_fill"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:padding="5dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email ID(*)"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="Enter email id"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/sheet_textinputborder"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Current Profile(*)"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="Enter your profile"
                android:inputType="text"
                android:padding="8dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/sheet_textinputborder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Upload Resume(*)"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:id="@+id/ll_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/sheet_textinputborder">

                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Click on Upload button"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:padding="8dp" />
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0"/>
            <ImageView
                android:id="@+id/iv_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_upload"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:layout_gravity="right|center_vertical"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/btCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Cancel"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_18sp"
                    android:background="@drawable/form_cancel"
                    android:textColor="#f74412"
                    android:layout_gravity="right" />


                <TextView
                    android:id="@+id/btSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Submit"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_18sp"
                    android:background="@drawable/form_sbmit"
                    android:textColor="@android:color/white"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:visibility="gone" />


    </FrameLayout>
</ScrollView>