<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/offer_boundr_bg"
    android:padding="15dp">



    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10% off on Yoga Matts"
        android:textColor="#000"
        android:textSize="@dimen/large_20sp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Flat 25% off on purchas of 5 or more Yoga Matts"
        android:textColor="#000"/>


    <TextView
        android:id="@+id/t3"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERESTED"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small_16sp"
        android:layout_gravity="right"
        android:drawableRight="@drawable/ic_right"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"/>
</LinearLayout>
</android.support.v7.widget.CardView>
