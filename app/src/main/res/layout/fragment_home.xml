<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#fff"
        tools:context=".Home.Dashboard.Home.Home">

    <ScrollView
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_opp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@android:color/holo_red_dark" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:layout_below="@+id/viewpager"
                    android:layout_gravity="bottom"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="20dp" />

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#319f1c"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="3dp"
                    android:padding="16dp"
                    android:text="Time Avaialability - 2 pm to 8:30 pm"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:background="@drawable/home_boundr_bg">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="7dp"
                            android:padding="15dp"
                            android:text=" If you are renovating your Home, Office, School, Hospital and Hotel, letÂ  SWASTIK_ENTERPRISES remove the stress and hassle before it begins. Using the services of an experienced interior decoration and design specialist can save your time and money in the home renovation process. We provide expert advice in interior decoration and design and help you select Media, Fabric, Furniture &amp; Accessories that suit your style and home.
" android:textColor="@android:color/black"
                            android:textSize="16dp" />

                    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textSize="@dimen/xlarge_25sp"
        android:background="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="italic"
        android:textColor="#000"
        android:typeface="serif"
        android:layout_gravity="center_horizontal"/>
</FrameLayout>

                <include layout="@layout/home_ours_services_laout"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:padding="10dp"
                            android:gravity="left"
                            android:text="Contact Information"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif" />



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:padding="10dp"
                                android:background="@drawable/offer_boundr_bg">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="7dp"
                                    android:padding="15dp"
                                    android:text="276 A,Rameshwar Nagar Main Road,Opp Mohan Bansi complex Basni 1st Phase Jodhpur- 342005, Rajasthan, India"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp" />


                                <TextView
                                    android:id="@+id/iv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_directions"
                                    android:background="#1daf00"
                                    android:drawablePadding="5dp"
                                    android:padding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="Get Directions"
                                    android:textColor="#fff"
                                    android:textStyle="bold"
                                    android:typeface="serif"
                                    android:textSize="@dimen/medium_18sp"
                                    android:layout_gravity="bottom|center_horizontal"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textSize="@dimen/xlarge_25sp"
                                android:background="#fff"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textStyle="italic"
                                android:textColor="#000"
                                android:typeface="serif"
                                android:layout_marginLeft="20dp"/>


                        </FrameLayout>

                        <include layout="@layout/abc"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>



        <RelativeLayout
            android:id="@+id/rl_opp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_opp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_opprtunity_view"
                android:text="Opportunity for you to work with us!"
                android:gravity="center"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:typeface="serif" />
        </RelativeLayout>

    </RelativeLayout>